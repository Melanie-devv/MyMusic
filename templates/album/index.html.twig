{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <h1>Album index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ReleaseDate</th>
                <th>Type</th>
                <th>Thumbnail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.title }}</td>
                <td>{{ album.releaseDate ? album.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ album.type }}</td>
                <td><img src=" {{ album.thumbnail }} " width="200px"></td>
                <td>
                    </br><a href="{{ path('app_album_show', {'id': album.id}) }}"><i class="fa-solid fa-eye fa-xl"></i></a></br></br>
                    <a href="{{ path('app_album_edit', {'id': album.id}) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_album_new') }}">Create new</a>
{% endblock %}
