{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED') %}
        <p>Vous êtes déjà connecté avec {{ app.user.email}}</p>
    {% endif %}
    
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form_start(form, { action: path('app_login')}) }}
        {{ form_row(form.email, { value: last_username }) }}
        {{ form_row(form.password) }}

        <button type="submit">Se connecter</button>
    {{ form_end(form) }}
{% endblock %}
