{% extends 'base.html.twig' %}

{% block title %}Music index{% endblock %}

{% block body %}
    <h1>Music index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for music in music %}
            <tr>
                <td>{{ music.id }}</td>
                <td>{{ music.title }}</td>
                <td>{{ music.duration }}</td>
                <td>
                    <a href="{{ path('app_music_show', {'id': music.id}) }}"><i class="fa-solid fa-eye fa-xl"></i></a>
                    <a href="{{ path('app_music_edit', {'id': music.id}) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_music_new') }}">Create new</a>
{% endblock %}
