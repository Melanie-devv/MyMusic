{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ album.title }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ album.releaseDate ? album.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ album.type }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td><img src=" {{ album.thumbnail }} " width="200px"></td>
            </tr>
            <tr>
                <th>Musics</th>
                <td><ol>{% for track in album.musics %}
                        <li>{{ track.title }}</li>
                {% endfor %}</ol></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_album_index') }}">back to list</a>

    <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
